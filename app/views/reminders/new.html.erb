<h1> Create a Reminder </h1>

<%= form_tag "/reminders", :method => "post" do %>
  <p> <%=label_tag :title %> <br>
      <%=text_field_tag :title %>
  </p>

  <p> <%=label_tag :message %> <br>
      <%=text_area_tag :content %>
  </p>

  <p> <%=label_tag :phonenumber %> <br>
      <%=text_field_tag :phone %>
  </p>

  <p> <%=label_tag :date %> <br>
      <%=text_field_tag :date, nil, class: "choosedate" %>
  </p>

   <p> <%=label_tag :time %> <br>
      <%=time_select :time, nil, class: "choosetime" %>
  </p>

  <p><%=submit_tag "Submit" %></p>


<% end %>